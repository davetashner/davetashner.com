---
import BaseLayout from '../layouts/BaseLayout.astro';
import ThemeToggle from '../components/ThemeToggle.astro';
---

<BaseLayout title="Dave Tashner - Coming Soon">
  <header
    slot="header"
    class="sticky top-0 z-40 w-full border-b transition-theme"
    style="border-color: var(--color-border); background-color: var(--color-bg-primary);"
  >
    <div class="container flex h-14 items-center justify-between">
      <span class="font-semibold" style="color: var(--color-text-primary);"
        >Dave Tashner</span
      >
      <ThemeToggle />
    </div>
  </header>

  <div
    class="container py-16 flex flex-col items-center justify-center min-h-[calc(100vh-8rem)]"
  >
    <h1 class="text-4xl md:text-5xl font-bold tracking-tight text-center mb-4">
      <span class="text-gradient">Coming Soon</span>
    </h1>
    <p
      class="text-lg text-center max-w-md"
      style="color: var(--color-text-secondary);"
    >
      Something new is on the way. Stay tuned for updates.
    </p>
  </div>

  <footer
    slot="footer"
    class="border-t py-6 transition-theme"
    style="border-color: var(--color-border);"
  >
    <div
      class="container text-center text-sm"
      style="color: var(--color-text-muted);"
    >
      &copy; {new Date().getFullYear()} Dave Tashner. All rights reserved.
    </div>
  </footer>
</BaseLayout>
